{
  "compilerOptions": {
    "baseUrl": "./src",
    "checkJs": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./*"]
    },
    "strict": true,
    "target": "ESNext",
    "types": ["vite/client"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
